import Header from "../../components/header.astro";
import Footer from "../../components/footer.astro";

// Define la interfaz para productos
interface Product {
  id_producto: number;
  nombre_producto: string;
  precio: number;
  img1: string;
  id_categoria: number;
  descuento?: number;
  id_cat_accesorio?: number;
}

// Variables inicializadas con tipos explícitos
let products: Product[] = [];
let filteredProducts: Product[] = [];

// Llamada al backend para obtener los productos
try {
  const response = await fetch('http://localhost:3000/api/productos');
  
  if (response.ok) {
    products = await response.json();
    filteredProducts = products.filter(product => product.id_cat_accesorio !== null);
  } else {
    console.error('Error en la respuesta del servidor:', response.statusText);
  }
} catch (err) {
  console.error('Error al obtener productos:', err);
}
