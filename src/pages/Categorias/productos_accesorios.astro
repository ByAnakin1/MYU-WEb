                return;
            }
    
            function openFilters() {
                filtersPanel.classList.remove('hidden');
                body.classList.add('overflow-hidden', 'fixed', 'inset-0');
            }
    
            function closeFilters() {
                filtersPanel.classList.add('hidden');
                body.classList.remove('overflow-hidden', 'fixed', 'inset-0');
            }
    
            // Toggle filters on mobile
            toggleFiltersButton.addEventListener('click', openFilters);
    
            // Close filters when the 'x' button is clicked
            closeFiltersButton.addEventListener('click', closeFilters);
    
            // Optional: Close filters if clicking outside the panel on mobile
            document.addEventListener('click', (event) => {
                // Type-safe null checks and type casting
                const target = event.target as Node | null;
                
                if (!target) return;
    
                const isClickInsideFilters = filtersPanel.contains(target);
                const isToggleButton = toggleFiltersButton.contains(target);
                
                if (!isClickInsideFilters && !isToggleButton && !filtersPanel.classList.contains('hidden')) {
                    closeFilters();
                }
            });
        });
