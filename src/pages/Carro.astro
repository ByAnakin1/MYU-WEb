---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Fira Sans', sans-serif;
        }
        .size-box {
            background-color: #f3f4f6;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.875rem;
            color: #6b7280;
            display: inline-block;
            margin-top: 0.5rem;
        }
        .trash-icon {
            width: 24px;
            height: 24px;
            cursor: pointer;
            position: absolute;
            top: 8px;
            right: 8px;
        }
    </style>
</head>
<body class="bg-pink-200 flex flex-col min-h-screen">
    <!-- Header -->
    <Header />
    <br><br><br><br>
    <main class="flex-grow container mx-auto p-4 lg:p-8 flex flex-col lg:flex-row lg:space-x-8">
        <!-- Productos a la izquierda -->
        <div class="lg:w-2/3 w-full">
            <h2 class="text-xl font-semibold mb-4" id="cartHeader">Carrito de Compras (3 productos)</h2>
            <div class="grid grid-cols-1 gap-4">
                
                <!-- Producto 1 -->
                <div class="bg-white p-4 shadow-lg rounded-lg flex items-center justify-between relative">
                    <img src="public/img/4.jpg" alt="Blusa Ember Off White" class="w-24 h-24 rounded-md mb-4 lg:mb-0">
                    <div class="flex-1 ml-4">
                        <h3 class="text-lg font-semibold">Blusa Ember Off White</h3>
                        <p class="size-box">Small</p>
                        <p class="size-box">Talla: XL</p>
                        <p class="text-gray-500">Precio: S/ 129.00</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button onclick="updateQuantity(-1)" class="px-3 py-1 border border-gray-300 rounded">-</button>
                        <input type="text" id="quantity" value="1" class="w-10 text-center border-none focus:ring-0 mx-2" readonly>
                        <button onclick="updateQuantity(1)" class="px-3 py-1 border border-gray-300 rounded">+</button>
                    </div>
                    <span class="font-semibold text-lg text-gray-700" id="totalPrice">S/ 129.00</span>
                    <img src="public/img/Tacho-basura.png" alt="Eliminar producto" class="trash-icon" onclick="removeProduct()">
                </div>

                <!-- Producto 2 -->
                <div class="bg-white p-4 shadow-lg rounded-lg flex items-center justify-between relative">
                    <img src="public/img/4.jpg" alt="Blusa Ember Off White" class="w-24 h-24 rounded-md mb-4 lg:mb-0">
                    <div class="flex-1 ml-4">
                        <h3 class="text-lg font-semibold">Blusa Ember Off White</h3>
                        <p class="size-box">Medium</p>
                        <p class="size-box">Talla: L</p>
                        <p class="text-gray-500">Precio: S/ 129.00</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button onclick="updateQuantity(-1)" class="px-3 py-1 border border-gray-300 rounded">-</button>
                        <input type="text" id="quantity" value="1" class="w-10 text-center border-none focus:ring-0 mx-2" readonly>
                        <button onclick="updateQuantity(1)" class="px-3 py-1 border border-gray-300 rounded">+</button>
                    </div>
                    <span class="font-semibold text-lg text-gray-700" id="totalPrice">S/ 129.00</span>
                    <img src="public/img/Tacho-basura.png" alt="Eliminar producto" class="trash-icon" onclick="removeProduct()">
                </div>

                <!-- Producto 3 -->
                <div class="bg-white p-4 shadow-lg rounded-lg flex items-center justify-between relative">
                    <img src="public/img/4.jpg" alt="Blusa Ember Off White" class="w-24 h-24 rounded-md mb-4 lg:mb-0">
                    <div class="flex-1 ml-4">
                        <h3 class="text-lg font-semibold">Blusa Ember Off White</h3>
                        <p class="size-box">Large</p>
                        <p class="size-box">Talla: M</p>
                        <p class="text-gray-500">Precio: S/ 129.00</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button onclick="updateQuantity(-1)" class="px-3 py-1 border border-gray-300 rounded">-</button>
                        <input type="text" id="quantity" value="1" class="w-10 text-center border-none focus:ring-0 mx-2" readonly>
                        <button onclick="updateQuantity(1)" class="px-3 py-1 border border-gray-300 rounded">+</button>
                    </div>
                    <span class="font-semibold text-lg text-gray-700" id="totalPrice">S/ 129.00</span>
                    <img src="public/img/Tacho-basura.png" alt="Eliminar producto" class="trash-icon" onclick="removeProduct()">
                </div>
                
            </div>
        </div>

        <!-- Resumen a la derecha -->
        <div class="lg:w-1/3 w-full bg-white p-6 shadow-lg rounded-lg">
            <h2 class="text-lg font-semibold mb-4">Resumen</h2>
            <div class="flex justify-between items-center mb-4">
                <span class="text-gray-600">Subtotal</span>
                <span class="font-semibold text-lg" id="summarySubtotal">S/ 387.00</span>
            </div>
            <hr class="my-2">
            <div class="flex justify-between items-center mb-4">
                <span class="text-gray-600">Total</span>
                <span class="font-semibold text-xl text-red-600" id="summaryTotal">S/ 387.00</span>
            </div>
            <button class="bg-green-600 text-white w-full py-3 rounded hover:bg-green-500 text-lg mt-4">Ir a comprar</button>
        </div>
    </main>

    <!-- Footer -->
    <Footer />

    <script type="module">
        const products = [
            { id: 1, name: "Blusa Ember Off White", size: "Small", talla: "XL", price: 129.00, quantity: 1, image: "public/img/4.jpg" },
            { id: 2, name: "Blusa Ember Off White", size: "Medium", talla: "L", price: 129.00, quantity: 1, image: "public/img/4.jpg" },
            { id: 3, name: "Blusa Ember Off White", size: "Large", talla: "M", price: 129.00, quantity: 1, image: "public/img/4.jpg" }
        ];

        function renderProducts() {
            const productList = document.getElementById("productList");
            productList.innerHTML = "";

            products.forEach(product => {
                const productCard = document.createElement("div");
                productCard.classList.add("product-card");

                productCard.innerHTML = `
                    <img src="${product.image}" alt="${product.name}" class="product-image">
                    <div class="product-details">
                        <span class="product-name">${product.name}</span>
                        <span class="size-box">${product.size}</span>
                        <span class="size-box">Talla: ${product.talla}</span>
                        <p class="product-price">Precio: S/ ${product.price.toFixed(2)}</p>
                    </div>
                    <div class="product-actions">
                        <button onclick="updateQuantity(${product.id}, -1)">-</button>
                        <input type="text" class="quantity-input" value="${product.quantity}" readonly>
                        <button onclick="updateQuantity(${product.id}, 1)">+</button>
                    </div>
                    <span>S/ ${(product.price * product.quantity).toFixed(2)}</span>
                    <img src="public/img/Tacho-basura.png" alt="Eliminar producto" class="trash-icon" onclick="removeProduct(${product.id})">
                `;
                productList.appendChild(productCard);
            });

            updateSummary();
        }

        window.updateQuantity = (id, change) => {
            const product = products.find(p => p.id === id);
            if (product) {
                product.quantity = Math.max(1, product.quantity + change);
                renderProducts();
            }
        }

        window.removeProduct = (id) => {
            const index = products.findIndex(p => p.id === id);
            if (index !== -1) {
                products.splice(index, 1);
                renderProducts();
            }
        }

        function updateSummary() {
    const subtotal = products.reduce((acc, product) => acc + product.price * product.quantity, 0);
    document.getElementById("summarySubtotal").innerText = `S/ ${subtotal.toFixed(2)}`;
    document.getElementById("summaryTotal").innerText = `S/ ${subtotal.toFixed(2)}`;
    document.getElementById("cartHeader").innerText = `Carrito de Compras (${products.length} productos)`;
}


        renderProducts();
    </script>
</body>
</html>
