---
import Header from "../components/header.astro";
import Card from "../components/Card.astro";
import Footer from "../components/footer.astro";
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda - Zona Outlet</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #fffcf6;
        }
    </style>
</head>
<body>
    <!-- Encabezado -->
    <header class="w-full h-96 bg-red-500 text-white p-8 mb-6 flex items-center justify-center" 
            style="background-image: url('/public/img/banner_novedades.jpeg'); background-size: cover; background-position: center;">
    </header>

    <main class="container mx-auto px-4 my-8">
        <div class="flex">
            <!-- Filtros -->
            <aside class="w-1/5 p-4 bg-white shadow-md">
                <h2 class="font-bold text-xl mb-4">Filtros</h2>
                <!-- Descuentos -->
                <div class="mb-6">
                    <h3 class="font-semibold">Descuento</h3>
                    <ul class="space-y-2 mt-2">
                        <li><input type="checkbox" id="descuento30"> <label for="descuento30">Hasta 30%</label></li>
                        <li><input type="checkbox" id="descuento40"> <label for="descuento40">30% - 40%</label></li>
                        <li><input type="checkbox" id="descuento50"> <label for="descuento50">40% - 50%</label></li>
                        <li><input type="checkbox" id="descuento60"> <label for="descuento60">50% - 60%</label></li>
                        <li><input type="checkbox" id="mas60"> <label for="mas60">Más de 60%</label></li>
                    </ul>
                </div>
                <!-- Colores -->
                <div class="mb-6">
                    <h3 class="font-semibold">Color</h3>
                    <ul class="space-y-2 mt-2">
                        <li><input type="checkbox" id="colorAmarillo"> <label for="colorAmarillo">Amarillo</label></li>
                        <li><input type="checkbox" id="colorAzul"> <label for="colorAzul">Azul</label></li>
                        <li><input type="checkbox" id="colorBlanco"> <label for="colorBlanco">Blanco</label></li>
                    </ul>
                </div>
                <!-- Precio -->
                <div>
                    <h3 class="font-semibold">Precio</h3>
                    <ul class="space-y-2 mt-2">
                        <li><input type="checkbox" id="precio20"> <label for="precio20">Hasta S/ 20.00</label></li>
                        <li><input type="checkbox" id="precio40"> <label for="precio40">S/ 20.00 - S/ 40.00</label></li>
                        <li><input type="checkbox" id="precio60"> <label for="precio60">S/ 40.00 - S/ 60.00</label></li>
                    </ul>
                </div>
            </aside>

            <!-- Sección de Productos -->
            <section class="w-4/5">
                <div class="grid grid-cols-3 gap-4 mb-6">
                    <div class="bg-gray-200 h-40 flex items-center justify-center">Mujer</div>
                    <div class="bg-gray-200 h-40 flex items-center justify-center">Hombre</div>
                    <div class="bg-gray-200 h-40 flex items-center justify-center">Niños</div>
                </div>
                
                <!-- Ordenar por -->
                <div class="mb-4 flex justify-between items-center">
                    <p>362 productos</p>
                    <select class="border p-2">
                        <option value="">Ordenar por</option>
                        <option value="menor-precio">Menor Precio</option>
                        <option value="mayor-precio">Mayor Precio</option>
                        <option value="mas-vendidos">Más vendidos</option>
                        <option value="mejor-valorados">Mejor valorados</option>
                        <option value="a-z">A - Z</option>
                        <option value="z-a">Z - A</option>
                        <option value="lo-nuevo">Lo nuevo</option>
                        <option value="mejor-descuento">Mejor descuento</option>
                    </select>
                </div>

                <!-- Listado de Productos -->
                <div class="grid grid-cols-4 gap-4">
                    <div class="bg-white p-4 shadow-md">Producto 1</div>
                    <div class="bg-white p-4 shadow-md">Producto 2</div>
                    <div class="bg-white p-4 shadow-md">Producto 3</div>
                    <div class="bg-white p-4 shadow-md">Producto 4</div>
                    <!-- Repetir más productos según sea necesario -->
                </div>
            </section>
        </div>

        <!-- Paginación -->
        <div class="pagination mt-8 flex justify-center gap-4">
            <button class="pagination-arrow bg-pink-500 text-white hover:bg-pink-600 rounded-full flex items-center justify-center w-12 h-12">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left w-6 h-6">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
            </button>
            <button class="pagination-arrow bg-pink-500 text-white hover:bg-pink-600 rounded-full flex items-center justify-center w-12 h-12">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right w-6 h-6">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
            </button>
        </div>
    </main>

    <!-- Pie de página -->
    <footer class="bg-black text-white p-4 text-center">© 2024 Mi tienda</footer>
</body>
</html>

