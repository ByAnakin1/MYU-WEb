                    </section>
                </blockquote>
            </div>
            <script async src="https://www.tiktok.com/embed.js"></script>
        </section>

        <!-- Sección Redes Sociales -->
<section class="bg-white rounded-lg shadow-lg p-6 md:p-10 mx-auto my-8 fade-in max-w-full">
