                    </section>
                </blockquote>
            </div>
            <script async src="https://www.tiktok.com/embed.js"></script>
        </section>
        
        <!-- Nueva Sección: Redes Sociales -->
        <section class="bg-white rounded-lg shadow-lg p-10 mx-4 my-8 fade-in">
            <h2 class="text-2xl font-bold text-pink-600 mb-6 text-center bounce">¡Síguenos en Redes Sociales!</h2>
            <div class="flex justify-around items-center">
                <!-- Facebook -->
                <div class="w-1/4 text-center scale-up">
                    <a href="https://www.facebook.com/Myufashionshop" target="_blank">
                        <img src="https://cdn-icons-png.flaticon.com/512/124/124010.png" alt="Facebook" class="w-16 h-16 mx-auto transition-transform transform hover:scale-110 rotate">
                        <p class="text-gray-700 mt-4">Facebook</p>
                    </a>
                </div>
                <!-- Instagram -->
                <div class="w-1/4 text-center scale-up">
                    <a href="https://www.instagram.com/myu.fashionshop/" target="_blank">
                        <img src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png" alt="Instagram" class="w-16 h-16 mx-auto transition-transform transform hover:scale-110 rotate">
                        <p class="text-gray-700 mt-4">Instagram</p>
                    </a>
                </div>
                <!-- TikTok -->
