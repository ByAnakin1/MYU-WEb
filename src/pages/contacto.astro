---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

interface TikTok {
  id: number;
  link: string;         // El enlace completo al video de TikTok
  videoID: string;      // El ID del video de TikTok
}

const tiktoksResponse = await fetch('http://localhost:3000/api/tiktoks');

if (!tiktoksResponse.ok) {
  console.error('Error al obtener TikToks:', tiktoksResponse.statusText);
  throw new Error(`Error al obtener TikToks: ${await tiktoksResponse.text()}`);
}

const tiktoks: TikTok[] = await tiktoksResponse.json();
