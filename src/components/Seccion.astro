<head>
  <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
  />
</head>
<style>
  .swiper-wrapper {
      width: 100%;
      padding-top: 56px;
      height: max-content !important;
      -webkit-transition-timing-function: linear !important;
      transition-timing-function: linear !important;
      position: relative;
  }
  body {
      background-color: #ffffff;
  }

  /* Pantallas grandes (PC) */
  @media (min-width: 1024px) {
      .swiper-slide img {
          height: auto; /* Ajusta la altura automáticamente a la imagen en PC */
          width: 100%; /* Ocupará todo el ancho disponible */
          object-fit: cover; /* La imagen se recorta para llenar el espacio sin deformarse */
      }
  }

  @media (max-width: 640px) {
        /* Ajustes para pantallas pequeñas (celulares) */
        .banner {
          height: 200px; /* Ajustar altura del banner */
          background-size: cover;
          background-position: center;
        }
      }
      .no-scroll {
        overflow: hidden;
      }
      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 50;
        display: none;
      }
      .overlay.show {
        display: block;
      }
      .overlay-content {
        background-color: white;
        padding: 1rem;
        position: relative;
        width: 80%;
        max-width: 300px;
        margin: 100px auto;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      }
</style>

<body>
  <div class="w-full relative">
      <div class="swiper progress-slide-carousel swiper-container relative">
          <div class="swiper-wrapper">
              <div class="swiper-slide">
                  <div class="rounded-2xl flex justify-center items-center">
                      <span class="text-3xl font-semibold">
                          <img 
                              src="https://coolboxpe.vtexassets.com/assets/vtex.file-manager-graphql/images/377a08f0-ecc8-4a34-9415-7faa9c08a998___89d94c61eabb6723553dbfe15b7658c8.png" 
                              alt=""
                              srcset="https://coolboxpe.vtexassets.com/assets/vtex.file-manager-graphql/images/14dbb8bd-d27a-4b70-b6d6-e55dc3ceff96___a0e7ea97c5b0b5e73a0b3d27e3bf8528.png 1024w,
                                      img/banner_small.jpg 640w"
                              sizes="(max-width: 640px) 640px, 1024px"
                          >
                      </span>
                  </div>
              </div>
              <div class="swiper-slide">
                  <div class="rounded-2xl flex justify-center items-center">
                      <span class="text-3xl font-semibold">
                          <img 
                              src="https://coolboxpe.vtexassets.com/assets/vtex.file-manager-graphql/images/80f2723d-c307-4e06-9068-c7ae3fd8d6d9___3f764dfdf00a5a02c09112a183c8d423.png" 
                              alt=""
                              srcset="https://coolboxpe.vtexassets.com/assets/vtex.file-manager-graphql/images/f9fba7fd-9ad1-4976-b212-721bb2b47533___e3c449bdb2aa3681ea1b3836d9383387.png   1024w,
                                      img/banner_small.jpg 640w"
                              sizes="(max-width: 640px) 640px, 1024px"
                          >
                      </span>
                  </div>
              </div>
              <div class="swiper-slide">
                  <div class="rounded-2xl flex justify-center items-center">
                      <span class="text-3xl font-semibold">
                          <img 
                              src="https://coolboxpe.vtexassets.com/assets/vtex.file-manager-graphql/images/0c4a8149-6329-4267-9711-c3a1dee7935a___2f4bdb515f708b76c6ec0c0c2cf20bf1.png" 
                              alt=""
                              srcset="https://coolboxpe.vtexassets.com/assets/vtex.file-manager-graphql/images/eadf8b9a-545b-401b-9378-23c28d2617c3___9d62e23c010f0d0853d577468f9f1f34.png 1024w,
                                      img/banner_small.jpg 640w"
                              sizes="(max-width: 640px) 640px, 1024px"
                          >
                      </span>
                  </div>
              </div>
          </div>
          <div class="swiper-pagination !bottom-2 !top-auto !w-10 right-0 mx-auto bg-gray-100"></div>
      </div>
  </div>

  <script type="module">
      import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs'
      var swiper = new Swiper(".progress-slide-carousel", {
          loop: true,
          fraction: true,
          autoplay: {
              delay: 5500,
              disableOnInteraction: false,
          },
          pagination: {
              el: ".progress-slide-carousel .swiper-pagination",
              type: "progressbar",
          },
      });
  </script>
</body>
