<head>
  <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
  />
</head>
<style>
  .swiper-wrapper {
      width: 100%;
      padding-top: 56px;
      height: max-content !important;
      -webkit-transition-timing-function: linear !important;
      transition-timing-function: linear !important;
      position: relative;
  }
  body {
      background-color: #ffffff;
  }

  /* Pantallas grandes (PC) */
  @media (min-width: 1024px) {
      .swiper-slide img {
          height: auto; /* Ajusta la altura automáticamente a la imagen en PC */
          width: 100%; /* Ocupará todo el ancho disponible */
          object-fit: cover; /* La imagen se recorta para llenar el espacio sin deformarse */
      }
  }

  @media (max-width: 640px) {
        /* Ajustes para pantallas pequeñas (celulares) */
        .banner {
          height: 200px; /* Ajustar altura del banner */
          background-size: cover;
          background-position: center;
        }
      }
      .no-scroll {
        overflow: hidden;
      }
      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 50;
        display: none;
      }
      .overlay.show {
        display: block;
      }
      .overlay-content {
        background-color: white;
        padding: 1rem;
        position: relative;
        width: 80%;
        max-width: 300px;
        margin: 100px auto;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      }
</style>

<body>
  <div class="w-full relative">
      <div class="swiper progress-slide-carousel swiper-container relative">
          <div class="swiper-wrapper">
              <div class="swiper-slide">
                  <div class="rounded-2xl flex justify-center items-center">
                      <span class="text-3xl font-semibold"><img src="img/banner.jpg" alt=""></span>
                  </div>
              </div>
              <div class="swiper-slide">
                  <div class="rounded-2xl flex justify-center items-center">
                      <span class="text-3xl font-semibold"><img src="img/banner.jpg" alt=""></span>
                  </div>
              </div>
              <div class="swiper-slide">
                  <div class="rounded-2xl flex justify-center items-center">
                      <span class="text-3xl font-semibold"><img src="img/banner.jpg" alt=""></span>
                  </div>
              </div>
          </div>
          <div class="swiper-pagination !bottom-2 !top-auto !w-10 right-0 mx-auto bg-gray-100"></div>
      </div>
  </div>

  <script type="module">
      import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs'
      var swiper = new Swiper(".progress-slide-carousel", {
          loop: true,
          fraction: true,
          autoplay: {
              delay: 5500,
              disableOnInteraction: false,
          },
          pagination: {
              el: ".progress-slide-carousel .swiper-pagination",
              type: "progressbar",
          },
      });
  </script>
</body>
