<style>
/* ============================ DESKTOP ============================ */

/* Contenedor principal del slider */
.slider-container {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    white-space: nowrap;
    max-width: 100%;
}

/* Configuración de las categorías para escritorio */
.category-card {
    flex-shrink: 0;
    width: calc((100% - 8rem) / 5); /* 5 categorías visibles con espacio */
    height: 600px; /* Mantener altura original */
}

/* Espaciado entre categorías */
.categories {
    display: flex;
    gap: 2rem; /* Espacio entre categorías */
}

/* Botones de navegación */
button {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* ============================ MOBILE ============================ */

/* Ajustes para móvil */
@media (max-width: 768px) {
    /* Configuración de las categorías para móvil */
    .category-card {
        width: 100%; /* Una categoría por vez */
        height: 450px; /* Ajustar altura si es necesario */
    }

    /* El contenedor de las categorías ahora usa todo el ancho */
    .slider-container {
        overflow-x: auto;
        scroll-behavior: smooth;
        padding: 0;
        display: flex;
    }

    /* Espaciado entre categorías reducido para móvil */
    .categories {
        display: flex;
        flex-direction: row; /* Asegura que las categorías estén en fila horizontal */
        gap: 0; /* No espacio entre categorías */
    }

    /* Ajustar los botones de navegación */
    button {
        width: 40px;
        height: 40px;
        font-size: 1.5rem;
    }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const sliderContainer = document.querySelector(".slider-container");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");

    const scrollAmount = sliderContainer.clientWidth; // Desplazamiento equivalente al ancho visible

    prevBtn.addEventListener("click", () => {
        sliderContainer.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    });

    nextBtn.addEventListener("click", () => {
        sliderContainer.scrollBy({ left: scrollAmount, behavior: "smooth" });
    });
});
</script>
