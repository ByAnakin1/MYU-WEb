<style>
/* ============================ DESKTOP ============================ */
.slider-container {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    white-space: nowrap;
    max-width: 100%;
}

.category-card {
    flex-shrink: 0;
    width: calc((100% - 6rem) / 4); /* Más ancho: 4 categorías visibles */
    height: 600px;
}

.categories {
    display: flex;
    gap: 2rem;
}

button {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* ============================ MOBILE ============================ */
@media (max-width: 768px) {
    .category-card {
        width: 100%;
        height: 450px;
    }

    .slider-container {
        overflow-x: auto;
        scroll-behavior: smooth;
        padding: 0;
        display: flex;
    }

    .categories {
        display: flex;
        flex-direction: row;
        gap: 1rem; /* Más espaciado */
    }

    button {
        width: 40px;
        height: 40px;
        font-size: 1.5rem;
    }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const sliderContainer = document.querySelector(".slider-container");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");

    const scrollAmount = sliderContainer.clientWidth; // Desplazamiento equivalente al ancho visible

    prevBtn.addEventListener("click", () => {
        sliderContainer.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    });

    nextBtn.addEventListener("click", () => {
        sliderContainer.scrollBy({ left: scrollAmount, behavior: "smooth" });
    });
});
</script>
