{ link: "/Categorias/productos_faldas", image: "https://www.topitop.pe/arquivos/240819_banner_desktop_1.png?v=638596431272970000", name: "FALDAS" },
{ link: "/Categorias/productos_pantalones", image: "https://www.topitop.pe/arquivos/240819_banner_desktop_7.png?v=638596431277930000", name: "PANTALONES-SHORTS" },
{ link: "/Categorias/productos_polos", image: "https://www.topitop.pe/arquivos/240819_banner_desktop_12.png?v=638596431283570000", name: "POLOS-TOPS" },
{ link: "/Categorias/productos_poleras", image: "https://www.topitop.pe/arquivos/240819_banner_desktop_6.png?v=638596431281830000", name: "POLERAS-CASACAS" },
