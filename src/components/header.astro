<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const overlay = document.getElementById("overlay");
  const closeMenu = document.getElementById("close-menu");

  const storeLink = document.getElementById("store-link");
  const mobileMenuCategories = document.getElementById("mobile-menu-categories");
  const closeMenuCategories = document.getElementById("close-menu-categories");

  menuToggle.addEventListener("click", function () {
    mobileMenu.classList.toggle("show");
    overlay.classList.toggle("show");
    document.body.classList.toggle("no-scroll");
  });

  closeMenu.addEventListener("click", function () {
    mobileMenu.classList.remove("show");
    overlay.classList.remove("show");
    document.body.classList.remove("no-scroll");
  });

  storeLink.addEventListener("click", function (e) {
    e.preventDefault();
    mobileMenu.classList.remove("show");
    mobileMenuCategories.classList.add("show");
  });

  closeMenuCategories.addEventListener("click", function () {
    mobileMenuCategories.classList.remove("show");
    overlay.classList.remove("show");
    document.body.classList.remove("no-scroll");
  });

  overlay.addEventListener("click", function () {
    mobileMenu.classList.remove("show");
    mobileMenuCategories.classList.remove("show");
    overlay.classList.remove("show");
    document.body.classList.remove("no-scroll");
  });
</script>
