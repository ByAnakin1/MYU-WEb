  }
  /* Lista no ordenada personalizada */
  .custom-list {
      list-style-type: disc; /* Usa puntos */
      padding-left: 20px; /* Espacio a la izquierda para los puntos */
  }

  .custom-list li {
      margin-bottom: 8px; /* Espacio entre elementos de la lista */
  }

  /* Opcional: Estilizar el color de los puntos */
  .custom-list {
      color: #e8e7e1; /* Color del texto y puntos */
  }

  .custom-list li::marker {
      color: #e8e7e1; /* Color de los puntos */
  }
  #map {
      width: 100%;
      height: 300px;
  }
</style>

